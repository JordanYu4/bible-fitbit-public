<div style="text-align:center">
      <div style="display:inline-block">
		Top 10 Leaderboard
		<table>
		<% @top_10.each do |ranker| %>
			<% if ranker.nil? %>
			<% break %>
			<% end %>
			<tr bgcolor=<%= ranker["gender"] ? "#AED6F1".to_json.html_safe : "#FF83FF".to_json.html_safe %> >
				<td bgcolor=<%= ranker["gender"] ? "#AED6F1".to_json.html_safe : "#FF83FF".to_json.html_safe %>> 
					<div style='display: block; height: 20px; width: 200px; background: <%= ranker["gender"] ? "#AED6F1".to_json.html_safe : "#FF83FF".to_json.html_safe %>'>
						<%= @user.ministry.name %>
					</div>
				</td>
			</tr>
		<% end %>
		</table>
	</div>
</div>