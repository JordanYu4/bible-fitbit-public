<!DOCTYPE html>
<html>
  <head>
    <title>B-Fit</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://fonts.googleapis.com/css?family=Montserrat:300,400,500,600,700,800" rel="stylesheet">
    <script src="https://use.fontawesome.com/29c432d1e5.js"></script>
  </head>
  <body>
    <% if !session[:user_id].nil? %>
      <header>
        <ul class="Nav">
          <div class="Nav_items Nav_items-left">
            <div class="Nav_logo">
              <%=link_to "B-Fit", dashboard_path%>
            </div>

            <li class="Nav_item">
              <%=link_to dashboard_path do %>
                <span class="fa fa-home Nav_icon"></span>
                Dashboard
              <% end %>
            </li> 
            <% if !@pending_challenge_requests.nil? and @pending_challenge_requests.size > 0 %>
              <li class="Nav_item">
                <%=link_to challenges_path do %>
                  <span class="fa fa-star Nav_icon"></span>
                  Challenges
                  <span class="Nav_count"><%= String(@pending_challenge_requests.size) %></span>
                <% end %>
              </li> 
            <% else %>
              <li class="Nav_item">
                <%=link_to challenges_path do %>
                  <span class="fa fa-star Nav_icon"></span>
                  Challenges
                <% end %>
              </li>
            <% end %>
            <li class="Nav_item">
              <%=link_to log_reading_path do %>
                <span class="fa fa-book Nav_icon"></span>
                Log Reading
              <% end %>
            </li> 
            <li class="Nav_item">
              <%=link_to profile_path do %>
                <span class="fa fa-user Nav_icon"></span>
                Profile
              <% end %>
            </li>
          </div>
          <div class="Nav_items Nav_items-right">
            <!-- <li>Currently signed in as <%=@user_name%>.</li> -->
            <li class="Nav_item">
              <%=link_to signout_path do %>
                <span class="fa fa-sign-out Nav_icon"></span>
                Log Out
              <% end %>
            </li>
          </div>
        </ul>
        <ul class="NavMobile">
          <div class="NavMobile_items">
            <li class="NavMobile_item">
              <%=link_to dashboard_path do %>
                <span class="fa fa-home NavMobile_icon"></span>
                Dashboard
              <% end %>
            </li>
            <li class="NavMobile_item">
              <%=link_to challenges_path do %>
                <span class="fa fa-star NavMobile_icon"></span>
                Challenges
              <% end %>
            </li>
            <li class="NavMobile_item">
              <%=link_to log_reading_path do %>
                <span class="fa fa-book NavMobile_icon"></span>
                Log Reading
              <% end %>
            </li> 
            <li class="NavMobile_item">
              <%=link_to profile_path do %>
                <span class="fa fa-user NavMobile_icon"></span>
                Profile
              <% end %>
            </li>
            <li class="NavMobile_item">
              <%=link_to signout_path do %>
                <span class="fa fa-sign-out NavMobile_icon"></span>
                Log Out
              <% end %>
            </li>
          </div>
        </ul>
      </header>
    <% end %>
		<div class="container">
    	<% flash.each do |key, value| %>
      	<div class="alert alert-<%= key %>">
          <%= value %>
      	</div>
    	<% end %>
    	<%= yield %>
    </div>
  </body>
</html>
