<script>
    $(document).ready(function() { $("#book_dropdown").select2(); });
 </script>  

<div class="Container LogReading">
  <div>
    Note: You can log your reading multiple times by highlighting the chapter again
  </div>
  <div>
    <%= simple_form_for(@selected_book, url: search_path, :method => :post, remote: true) do |f| %>
    	<%= f.input :book, collection: @book_names, :include_blank => 'Select Book', label: false, selected: @previous_book_name, :input_html => {:id => "book_dropdown", :onchange=>'$(this.form).submit();'} %>
    <% end %>
  </div>
  <div id="log_table" >
  	<% if @chapter_num != nil %>
      <%= render partial: 'log_table', locals: {chapters: @chapter_num}  %>
      <% end %>
  </div>
  <br>
  <br>
  <button id="reset_book" type="button" class="Button">Reset Book Progress</button>
  <button id="reset_bible" type="button" class="Button">Reset Bible Progress</button>
</div>