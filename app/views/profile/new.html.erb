<script>
    $(document).ready(function() { $("#user_ministry").select2(); });
    $(document).ready(function() { $("#user_peer_class").select2(); });
 </script> 

<h1>Create your account</h1>


<%= simple_form_for(@user, url: profile_path, :method => :update) do |f| %>
  <%= f.input :name, :label => 'Put yo name', input_html: {value: @user_name} %>
	<%= f.input :peer_class, collection: @classes, :label => 'Peer class'%>
	<%= f.input :ministry, collection: @ministry_names, :label => 'Smallest ministry group'%>
	<%= f.input :gender, collection: ["male", "female"]%>
  <%= f.button :submit,  data: { disable_with: false }%>
<% end -%>
